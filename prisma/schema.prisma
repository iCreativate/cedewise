generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  INSURER
  REINSURER
  BROKER
  ADMIN
}

enum RiskStatus {
  DRAFT
  SUBMITTED
  UNDER_REVIEW
  ACCEPTED
  REJECTED
  BOUND
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String
  password      String
  role          UserRole
  company       String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  submittedRisks Risk[]   @relation("SubmittedRisks")
  assignedRisks Risk[]    @relation("AssignedRisks")
  messages      Message[]
  documents     Document[]
}

model Risk {
  id              String      @id @default(cuid())
  title           String
  description     String
  status          RiskStatus  @default(DRAFT)
  premium         Float
  coverage        String
  submitterId     String
  submitter       User        @relation("SubmittedRisks", fields: [submitterId], references: [id])
  assignedToId    String?
  assignedTo      User?       @relation("AssignedRisks", fields: [assignedToId], references: [id])
  documents       Document[]
  messages        Message[]
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

model Document {
  id          String    @id @default(cuid())
  name        String
  url         String
  type        String
  uploaderId  String
  uploader    User      @relation(fields: [uploaderId], references: [id])
  riskId      String
  risk        Risk      @relation(fields: [riskId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Message {
  id        String    @id @default(cuid())
  content   String
  senderId  String
  sender    User      @relation(fields: [senderId], references: [id])
  riskId    String
  risk      Risk      @relation(fields: [riskId], references: [id])
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}
